<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="consent_queue" resource="default" engine="innodb" comment="Queue messages">
        <column xsi:type="bigint" name="message_id" unsigned="true" nullable="false" identity="true"
                comment="Message ID"/>
        <column xsi:type="varchar" name="topic_name" nullable="true" length="255" comment="Message topic"/>
        <column xsi:type="smallint" name="status" unsigned="true" nullable="false" identity="false"
                comment="Message status in particular queue"/>
        <column xsi:type="longtext" name="body" nullable="true" comment="Message body"/>
        <column xsi:type="timestamp" name="retried_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Retried At"/>
        <column xsi:type="smallint" name="tries" unsigned="true" nullable="false"
                identity="false" default="0" comment="Number of trials to processed failed message processing"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="message_id"/>
        </constraint>
    </table>
    <table name="consent_queue_log" resource="default" engine="innodb"
           comment="Relation table to keep associations between consent queues and messages">
        <column xsi:type="bigint" name="message_log_id" unsigned="true" nullable="false" identity="true"
                comment="Message Log ID"/>
        <column xsi:type="bigint" name="message_id" unsigned="true" nullable="false" identity="false"
                comment="Message ID"/>
        <column xsi:type="timestamp" name="logged_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Logged At"/>
        <column xsi:type="longtext" name="error_body" nullable="true" comment="Error body"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="message_log_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="CONSENT_QUEUE_LOG_MESSAGE_ID_CONSENT_QUEUE_MESSAGE_ID"
                    table="consent_queue_log" column="message_id"
                    referenceTable="consent_queue" referenceColumn="message_id"
                    onDelete="CASCADE"/>
        <constraint xsi:type="unique" referenceId="CONSENT_QUEUE_LOG_MESSAGE_LOG_ID_MESSAGE_ID">
            <column name="message_log_id"/>
            <column name="message_id"/>
        </constraint>
    </table>
</schema>
